<nav class="results">
  <div class="container">
    <%= form_tag search_path(f: 'users') do %>
        <%= hidden_field_tag :q, params[:q] %>
        <%= submit_tag t('search.users') %>
    <% end %> | <%= content_tag 'span', t('search.results', count: @posts.count.to_s, for: params[:q]) %>
  </div>
</nav>

<div class="container results-for tweets">

  <% if @posts.empty? %>
      <div class="sub-container-left no-results"><%= t 'search.no_results.tweets' %></div>
  <% else %>
      <div class="sub-container-left">
        <% @posts.each do |p| %>
            <%= render partial: 'shared/post_view', locals: {post: p} %>
        <% end %>
      </div>
  <% end %>

  <div class="sub-container-right">
    <% if @users %>
        <% @users.first(2).each do |u| %>
          <%= render partial: 'shared/user_box', locals: { user: u } %>
        <% end %>
    <% end %>

    <%= render partial: 'shared/hashtag_box' %>
  </div>

</div>