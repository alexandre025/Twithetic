<nav class="results">
  <div class="container">
    <%= form_tag search_path do %>
        <%= hidden_field_tag :q, params[:q] %>
        <%= submit_tag t('search.tweets')%>
    <% end %> | <%= content_tag 'span', t('search.results', count: @users.count.to_s, for: params[:q]) %>
  </div>
</nav>

<div class="container results-for tweets">

  <% if @users.empty? %>
      <div class="sub-container-left no-results"><%= t 'search.no_results.users' %></div>
  <% else %>
      <div class="sub-container-left">

      </div>
  <% end %>

  <div class="sub-container-right">
    <%= render partial: 'shared/hashtag_box' %>
  </div>

</div>