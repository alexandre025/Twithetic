<div class="form-wrapper">

    <div class="form-header">
      <h2><%= t 'users.login' %></h2>
    </div>

  <div class="form-content">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-default'}) do |f| %>
      <div class="field">
        <div class="form-left">
          <%= f.label t('email') %> :
        </div>
        <div class="form-right">
          <%= f.email_field :email, autofocus: true %>
        </div>
      </div>

      <div class="field">
        <div class="form-left">
          <%= f.label t('password') %> :
        </div>
        <div class="form-right">
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <div class="form-left"></div>
          <div class="form-right">
            <%= f.check_box :remember_me %>
            <%= f.label t('remember_me') %>
          </div>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit t('login'), class: 'default-btn' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>

</div>