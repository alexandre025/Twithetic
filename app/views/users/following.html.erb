<%= render partial: 'users/user_header' %>

<div class="container">
  <div class="profil-infinite-scroll-container">
    <% @collection.each do |u| %>
        <%= render partial: 'shared/profil_thumb', locals: { user: u } %>
        <%= link_to_next_page @collection, 'Next page', class: 'infinite-scroll profil-infinite-scroll-item', params: params unless @collection.last_page? %>
    <% end %>
  </div>
</div>